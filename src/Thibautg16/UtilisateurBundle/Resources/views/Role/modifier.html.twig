{# Thibautg16/UtilisateurBundle/Resources/views/Role/modifier.html.twig #}
 
{% extends "@Thibautg16Squelette/layout.html.twig" %}
 
{% block title %}
	{{ parent() }} - Modifier role
{% endblock %}

{% block fil_ariane %} 
	{{ parent() }} 
    <li><a href="">Accueil</a></li>
    <li><a href="{{ path('thibautg16_role_lister') }}">Roles</a></li>
	<li class="active"><a href="">Modifier</a></li>
{% endblock %}

{% block body_thibautg16 %}
	<div class="container">    
		<fieldset>       
			<legend><h3>Modification Role : {{ role.nom }}</h3></legend>
			<div class="well">
				{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
				
                {# Les erreurs générales du formulaire. #}
				{{ form_errors(form) }}
					
                <div class="form-group">
					{{ form_label(form.nom, "Nom :", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
					{{ form_errors(form.nom) }}
					<div class="col-sm-4">
						{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
                					
                <div class="form-group">
					<span class="col-sm-3 control-label"> &nbsp; </span>
					<div class="col-sm-4 btn-center">
						{# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
						{{ form_widget(form.modifier, {'attr': {'class': 'btn btn-primary'}}) }} 
					</div>
				</div>     
							
				{# Génération automatique des champs pas encore écrits #}
				{{ form_rest(form) }}
						  
				{# Fermeture de la balise <form> du formulaire HTML #}
				{{ form_end(form) }}  
  		</fieldset>        
	</div>
{% endblock %}